# .ai-context
name: "OpenStack Python Style Guide"
version: "2.0"
primary_file: "docs/quick-rules.md"
detailed_file: "docs/comprehensive-guide.md"

# Token counts for context management
quick_rules_tokens: ~800
comprehensive_tokens: ~2500

# Usage recommendations
use_quick_for:
  - "code generation"
  - "validation"
  - "quick reference"
use_comprehensive_for:
  - "learning"
  - "complex debugging"
  - "policy questions"

# Repository structure
directories:
  docs: "Style guide documentation"
  examples: "Code examples and patterns"
  tools: "Validation and helper scripts"
